{
  "expo": {
    "name": "Scout",
    "slug": "fastapply",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fastapply",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#126ba3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fastapply.app",
      "infoPlist": {
        "NSDocumentsFolderUsageDescription": "We need access to documents to upload your resume",
        "NSPhotoLibraryUsageDescription": "We need access to photos to upload profile pictures",
        "NSMicrophoneUsageDescription": "We need microphone access for voice commands to search and apply for jobs hands-free"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#126ba3"
      },
      "package": "com.fastapply.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-audio",
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.759807876753-vrm3pb6rbbut1jn3oe4aqvhgfj4gbjei"
        }
      ],
      "expo-asset"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "81b5d3fa-d3b1-48c9-8df8-471fb277de6a"
      },
      "router": {}
    },
    "owner": "codev206"
  }
}
